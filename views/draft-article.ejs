<!-- draft-article.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Draft Article</title>
    <style>
    </style>
</head>
<body>
    <a>Edit Draft Article</a>

    <p>Created: <%= draft_article.created_at %></p>
    <p>Last Updated: <%= draft_article.updated_at %></p>

    <form id="editDraftForm" action="/author/edit-draft/<%= draft_article.id %>" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= draft_article.title %>">
        </div><br>
        <div>
            <label for="subtitle">Subtitle:</label>
            <input type="text" id="subtitle" name="subtitle" value="<%= draft_article.subtitle %>">
        </div><br>
        <div>
            <label for="content">Content:</label>
            <textarea id="content" name="content"><%= draft_article.content %></textarea>
        </div><br>

        <button type="submit">Save Changes</button>
    </form><br>
    
    <a href="/author">Back to Author Home</a>
</body>
</html>
