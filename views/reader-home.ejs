<!DOCTYPE html>
<html>
<head>
    <title>Reader Home</title>
    <link rel="stylesheet" type="text/css" href="/main.css">
    <style>
        h1,
        h2,
        h4 {
            text-align: center;
        }
    </style>
</head>
<body>
    <a>Reader Home Page</a>

    <% if (author) { %>
        <h1><%= author.blog_title %></h1>
        <h2><%= author.blog_subtitle %></h2>
        <h4>Author: <%= author.name %></h4>
    <% } else { %>
        <p>No author information available.</p>
    <% } %>

    <br>
    <h2>Articles</h2><br>
    <ul class="home-horizontal-list">
        <% articles.forEach(article => { %>
            <li>
                <a href="/reader/article/<%= article.id %>">
                    <%= article.title %>
                <p><%= article.subtitle %></p>
                <p><%= article.published_at %></p>
                </a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
